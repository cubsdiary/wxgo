/**index.wxss**/
.banner{
  width: 750rpx;
  height: 400rpx;
}
.banner .banner-swiper{
  width: 750rpx;
  height: 400rpx;
}
.banner .slide-image{
  display: block;
  width: 100%;
  height: 100%; 
}
.swiper-item .banner-con{
  width: 100%;
  height: 100%;
}
.menu{
  display: flex;
  width: 750rpx;
  height: 270rpx;
}
.menu .flex-item{
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-right: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0;
}
.menu .flex-item:nth-child(3){
  border-right: 0;
}
.menu .img-font{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.menu .img-font .menu-img{
  display: block;
  width: 150rpx;
  height: 150rpx;
}
.menu .img-font .menu-font{
  font-size: 24rpx;
  color: #666666;
}